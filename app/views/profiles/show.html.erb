<% content_for(:title, t('.title')) %>
<div class="flex flex-col py-36">
  <div class="card w-96 bg-base-100 shadow-xl">
    <div class="card-body">
      <h1 class="flex justify-center text-xl"><%= t('.title')%></h1>
      <div class="flex flex-wrap">
        <div class="avatar w-1/2">
          <div class="w-24 h-24 rounded-full">
          <%= image_tag current_user.avatar.url %>
          </div>
        </div>
        <div class="w-1/2 pr-5">
          <h2 class="card-title mb-3"><%= current_user.name %></h2>
          <p class="mb-3"><%= current_user.email %></p>
          <div class="card-actions mt-5">
            <%= link_to (t'profiles.edit.title'), edit_profile_path, class:"btn btn-secondary mb-3" %>
            <% if current_user.line_user_id.present? %>
              <%= link_to t('defaults.line_user_linked'), profile_path, class:"btn btn-success mb-3" %>
            <% else %>
              <%= link_to t('defaults.alignment_line'), line_login_login_path, class:"btn btn-success mb-3" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
