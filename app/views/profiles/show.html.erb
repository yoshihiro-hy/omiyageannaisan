<div class="flex flex-col">
  <div class="card w-96 bg-base-100 shadow-xl mt-5 mb-5">
    <div class="card-body">
      <h1 class="flex justify-center text-xl">プロフィール</h1>
      <div class="avatar">
        <div class="w-24 rounded-full">
         <%= image_tag current_user.avatar.url %>
        </div>
      </div>
      <h2 class="card-title"><%= current_user.name %></h2>
      <p><%= current_user.email %></p>
      <div class="card-actions">
        <%= link_to 'プロフィール編集', edit_profile_path, class:"btn btn-secondary" %>
        <%= link_to 'LINE連携', "#", class:"btn btn-success" %>
      </div>
    </div>
  </div>
  <h1 class="text-base-100 flex justify-center text-xl">宿泊先一覧(イメージ)</h1>
  <div class="card w-96 bg-base-100 shadow-xl mt-5 mb-5">
    <figure><img src="https://placeimg.com/400/225/arch" alt="Shoes" /></figure>
    <div class="card-body">
      <button class="text-xl mb-3">アパホテル</button>
      <div class="card-actions justify-center">
        <button class="btn btn-secondary">変更</button>
        <button class="btn btn-primary">削除</button>
      </div>
    </div>
  </div>
  <div class="card w-96 bg-base-100 shadow-xl mt-5 mb-5">
    <figure><img src="https://placeimg.com/400/225/arch" alt="Shoes" /></figure>
    <div class="card-body">
      <button class="text-xl mb-3">観光ホテル</button>
      <div class="card-actions justify-center">
        <button class="btn btn-secondary">変更</button>
        <button class="btn btn-primary">削除</button>
      </div>
    </div>
  </div>
</div>
