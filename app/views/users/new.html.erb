<div class="w-full max-w-sm my-24">
  <%= form_with model: @user, local: true do |f| %>
    <div class="mb-2">
      <div class="pt-2 pb-1">
        <%= f.label :name %>
      </div>
      <%= f.text_field :name, class: 'w-full rounded border border-gray-200 p-2' %>
    </div>
    <div class="mb-2">
      <div class="pt-2 pb-1">
        <%= f.label :email, class: 'block mb-1' %>
      </div>
      <%= f.email_field :email, class: 'w-full rounded border border-gray-200 p-2' %>
    </div>
    <div class="mb-2">
      <div class="pt-2 pb-1">
        <%= f.label :password, class: 'block mb-1' %>
      </div>
      <%= f.password_field :password, class: 'w-full rounded border border-gray-200 p-2' %>
    </div>
    <div class="mb-2">
      <div class="pt-2 pb-1">
        <%= f.label :password_confirmation, class: 'block mb-1' %>
      </div>
      <%= f.password_field :password_confirmation, class: 'w-full rounded border border-gray-200 p-2' %>
    </div>
    <div class="my-8 md:text-center">
      <%= f.submit "登録", class: 'btn btn-active' %>
    </div>
  <% end %>
  <div class="mt-6 text-center hover:underline hover:text-gray-600 hover:decoration-gray-600">
    <%= link_to "ログインページへ", "#" %>
  </div>
</div>
